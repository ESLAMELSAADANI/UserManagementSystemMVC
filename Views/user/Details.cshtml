@model UserRoleVM
@{
    ViewData["Title"] = "User Details";

    string GetRoleBadgeClass(string roleName)
    {
        return roleName.ToLower() switch
        {
            "admin" => "bg-danger",
            "instructor" => "bg-info text-dark",
            "user" => "bg-success",
            "supervisor" => "bg-primary",
            _ => "bg-secondary"
        };
    }
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top">
            <h2 class="mb-0 fw-bold">
                <i class="bi bi-person-circle me-2"></i>
                @Model.User.UserName
            </h2>
            <small class="d-block text-light-50">User Details Overview</small>
        </div>

        <div class="card-body bg-light">
            <table class="table table-bordered table-striped text-center align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Age</th>
                        <th scope="col">Roles</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="fw-semibold">@Model.User.Id</td>
                        <td>@Model.User.UserName</td>
                        <td>
                            <a href="mailto:@Model.User.Email" class="text-decoration-none text-primary">
                                <i class="bi bi-envelope-fill me-1"></i>@Model.User.Email
                            </a>
                        </td>
                        <td>@Model.User.Age</td>
                        <td>
                            @if (Model.RolesToDelete != null && Model.RolesToDelete.Any())
                            {
                                foreach (var role in Model.RolesToDelete)
                                {
                                    var badgeClass = GetRoleBadgeClass(role.RoleName);
                                    <span class="badge @badgeClass px-3 py-2 me-1 shadow-sm">@role.RoleName</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No roles assigned</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer text-center bg-white">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.User.Id" class="btn btn-primary px-4 ms-2">
                <i class="bi bi-pencil-square me-1"></i> Edit User
            </a>
        </div>
    </div>
</div>
