@model IEnumerable<User>
@{
    ViewData["Title"] = "Users";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-dark">👥 Users Management</h1>
        <a asp-action="Add" class="btn btn-success shadow-sm px-4">
            <i class="bi bi-person-plus"></i> Add New User
        </a>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <table class="table table-striped table-hover align-middle text-center mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-muted py-4">No Users Found!</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr class="user-row">
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Age</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@user.Id">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a class="btn btn-sm btn-outline-info" asp-action="ViewRoles" asp-route-id="@user.Id">
                                            <i class="bi bi-shield-lock"></i> Roles
                                        </a>
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@user.Id">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@user.Id">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional: Add a subtle hover animation
        document.querySelectorAll('.user-row').forEach(row => {
            row.addEventListener('mouseenter', () => row.style.transform = 'scale(1.01)');
            row.addEventListener('mouseleave', () => row.style.transform = 'scale(1)');
        });
    </script>
}
