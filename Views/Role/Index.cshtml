@model List<Role>
@{
    ViewData["Title"] = "Roles";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white text-center fw-bold fs-4">
                    <i class="bi bi-shield-lock"></i> Manage Roles
                </div>

                <div class="card-body p-4">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-exclamation-triangle fs-2 text-warning"></i>
                            <p class="mt-2 fs-5">No roles found!</p>
                            <a asp-action="Add" class="btn btn-success px-4">
                                <i class="bi bi-plus-circle"></i> Add New Role
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="fw-bold text-secondary"><i class="bi bi-list-ul"></i> Roles List</h4>
                            <a asp-action="Add" class="btn btn-success px-4">
                                <i class="bi bi-plus-circle"></i> Add Role
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Role Name</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@role.Id</td>
                                            <td>@role.RoleName</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-primary btn-sm me-2">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
