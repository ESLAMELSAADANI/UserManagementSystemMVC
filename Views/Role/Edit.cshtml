@model Role
@{
    ViewData["Title"] = "Edit Role";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center fw-bold fs-4">
                    <i class="bi bi-pencil-square"></i> Edit Role - @Model.RoleName
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label fw-semibold">
                                <i class="bi bi-shield-lock"></i> Role Name
                            </label>
                            <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                            <span asp-validation-for="RoleName" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
